# Indonesia EdTech Lead Gen Engine - Environment Configuration
# Copy this file to .env and fill in your API keys

# ===========================================
# API KEYS (Required)
# ===========================================

# Serper.dev - Google Search API
# Get your key at: https://serper.dev (2500 free searches)
SERPER_API_KEY=your_serper_api_key_here

# OpenRouter API (Recommended - access to all models)
# Get your key at: https://openrouter.ai
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Anthropic Claude API (Alternative)
# Get your key at: https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API (Alternative)
# Get your key at: https://platform.openai.com
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# LLM CONFIGURATION
# ===========================================

# LLM Provider: 'openrouter', 'claude', or 'openai'
LLM_PROVIDER=openrouter

# Model selection for each provider
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
CLAUDE_MODEL=claude-3-5-sonnet-20241022
OPENAI_MODEL=gpt-4o-mini

# ===========================================
# RATE LIMITING
# ===========================================

# Max requests per minute to Serper API
REQUESTS_PER_MINUTE=30

# Delay between scraping requests (seconds)
SCRAPE_DELAY_SECONDS=2

# Delay between processing schools (seconds)
SCHOOL_DELAY_SECONDS=3

# ===========================================
# SCRAPING OPTIONS
# ===========================================

# Max pages to scrape per school website
MAX_PAGES_PER_SCHOOL=5

# Request timeout (seconds)
REQUEST_TIMEOUT=30

# Use headless browser for scraping
HEADLESS_BROWSER=true

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================

# Supabase Project URL
SUPABASE_URL=https://tzcdzyqhadczxsvvfdhg.supabase.co

# Supabase Service Role Key (for backend - bypasses RLS)
# Get it from: Settings → API → service_role key
SUPABASE_KEY=your_supabase_service_role_key_here

# Supabase Anon Key (for frontend - safe with RLS)
SUPABASE_ANON_KEY=sb_publishable_mBHUGJABWYTE4PahfMcmSA_MOUETx-I

# ===========================================
# VALIDATION SETTINGS
# ===========================================

# Enable WhatsApp validation
VALIDATE_WHATSAPP=true

# Enable Email validation
VALIDATE_EMAIL=true

# Use external WhatsApp API (Waapi/Twilio) - requires API key
USE_WHATSAPP_API=false
WHATSAPP_API_KEY=your_whatsapp_api_key_here

